<% include components/header %>
<div ng-controller="programming_controller_user">
	<script src="./services/programmingAPI.js"></script>
	<script src="./controllers/programming_controller_user.js"></script>
	<main class="home">
		<form id="form-certificate" class="col s12" ng-cloak>
			<div class="hero parallax-container valign-wrapper" id="parallax-certificate">
			    <div class="container">
			        <div class="row center-align">
			        	<div class="col s12">
			        		<div id="data-certificate">
				        		<h2><b>CERTIFICADO</b></h2>
				        		<h4>O Instituto Federal de São Paulo - Campus São Carlos</h4>
				        		<h5>certifica</h5>
				        		<h4><b>{{certificate.person}}</b></h4>
				        		</br>
				           		<h5>Participou do evento <b>{{certificate.title}}</b>, com carga horária de <b>{{certificate.workload}}</b>,</h5>
				           		<h5>no dia <b>{{certificate.day}}</b>, no ambito do WeComp - Semana da Computação</h5>
			        		</div>
			          	</div>
			        </div>
			    </div>
			    <div class="parallax">
			        <img id="certificate-img" src="/images/Certificado.png">
			    </div>
		    </div>     
		</form>
	</main>
	<footer class="page-footer" ng-cloak>
		<div class="container">
			<div class="row">
				<div class="col s12">
					<div id="editor" class="center-align">
						<a class="btn btn-primary center-block modal-close" onclick="window.print();">Imprimir</a>
						<a class="btn btn-primary center-block modal-close" ng-click="saveCertificate()">Salvar</a>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<script src="./javascripts/jquery-3.2.1.min.js"></script>
	<script src="./javascripts/jspdf.debug.js"></script>
	<script src="./javascripts/jspdf.min.js""></script>
	<script src="./javascripts/html2canvas.min.js""></script>
</div>
</body>
